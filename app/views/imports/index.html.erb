<h1>Listing imports</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Import date</th>
    <th>Import status</th>
    <th>Total amount</th>
    <th></th>
    <th></th>
  </tr>

<% @imports.each do |import| %>
  <tr>
    <td><%= import.id %></td>
    <td><%= import.created_at %></td>
    <td><%= import.completed ? "Completed" : "In progress" %></td>
    <td><%= import.total_amount %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Reload', imports_path %>

<%= link_to 'New Import', new_import_path %>
