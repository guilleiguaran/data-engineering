source 'https://rubygems.org'

gem 'rails', '3.2.8'

gem 'sqlite3'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'less-rails'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
  gem 'therubyracer'
end

gem 'jquery-rails'

# Use puma as the app server
gem 'puma'

# Basic background jobs
gem 'girl_friday'
